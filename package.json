{
	"name": "sandpaper",
	"author": "Christopher Petta",
	"license": "MIT",
	"version": "1.4.0",
	"description": "Sandpaper is a commandline tool that's used to smooth out the rough edges when coding websites using HTML, CSS, and Javascript.",
	"main": "gulpfile.js",
	"repository": {
		"type": "git",
		"url": "git://github.com/cpetta/sandpaper.git"
	},
	"bin": {
		"sandpaper": "./cli.js"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"gulp": "gulp",
		"test": "nyc --reporter=html --reporter=text mocha --check-leaks --exit",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"xo": "xo --env=node"
	},
	"keywords": [
		"gulp,",
		"gulpfile",
		"toolchain",
		"linting",
		"website-optimization"
	],
	"browserslist": [
		"last 2 versions"
	],
	"husky": {
		"hooks": {
			"pre-commit": "yarn test && yarn xo",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"dependencies": {
		"autoprefixer": "^9.6.4",
		"browser-sync": "^2.26.7",
		"colorguard": "^1.2.1",
		"doiuse": "^4.2.0",
		"eslint": "^6.5.1",
		"eslint-config-xo": "^0.27.1",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-unicorn": "^14.0.0",
		"gulp": "^4.0.2",
		"gulp-cache": "^1.1.3",
		"gulp-changed": "^4.0.2",
		"gulp-changed-in-place": "^2.3.0",
		"gulp-clean-css": "^4.2.0",
		"gulp-eslint": "^6.0.0",
		"gulp-html-postcss": "^7.1.4",
		"gulp-htmlhint": "^3.0.0",
		"gulp-htmlmin": "^5.0.1",
		"gulp-if": "^3.0.0",
		"gulp-imagemin": "^6.1.1",
		"gulp-jshint": "^2.1.0",
		"gulp-postcss": "^8.0.0",
		"gulp-purgecss": "^1.2.0",
		"gulp-stylelint": "^11.0.0",
		"gulp-tslint": "^8.1.4",
		"gulp-typescript": "^5.0.1",
		"gulp-uglify": "^3.0.2",
		"gulp-zip": "^5.0.1",
		"jpegtran-bin": "^4.0.0",
		"jshint-more-stylish": "^1.0.1",
		"markdownlint": "^0.18.0",
		"meow": "^6.0.0",
		"postcss": "^7.0.18",
		"postcss-normalize": "^8.0.1",
		"postcss-preset-env": "^6.7.0",
		"postcss-reporter": "^6.0.1",
		"postcss-unprefix": "^2.1.4",
		"pump": "^3.0.0",
		"rehype-parse": "^6.0.1",
		"rehype-retext": "^2.0.3",
		"rehype-stringify": "^6.0.0",
		"remark-retext": "^3.1.3",
		"retext-contractions": "^3.0.0",
		"retext-english": "^3.0.3",
		"retext-indefinite-article": "^1.1.7",
		"retext-passive": "^2.0.0",
		"retext-quotes": "^3.0.0",
		"retext-redundant-acronyms": "^2.0.0",
		"retext-repeated-words": "^2.0.0",
		"retext-sentence-spacing": "^3.0.0",
		"stylelint": "^12.0.0",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-standard": "^19.0.0",
		"stylelint-order": "^3.1.0",
		"through2": "^3.0.1",
		"tslint": "^5.20.0",
		"typescript": "^3.6.2",
		"uglify-js": "^3.6.1",
		"unified": "^8.4.1",
		"unified-engine-gulp": "^7.0.0",
		"update-notifier": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"@semantic-release/changelog": "^3.0.4",
		"@semantic-release/commit-analyzer": "^6.3.0",
		"@semantic-release/git": "^7.0.16",
		"@semantic-release/github": "^5.5.3",
		"@semantic-release/npm": "^5.2.0",
		"@semantic-release/release-notes-generator": "^7.3.0",
		"coveralls": "^3.0.6",
		"husky": "^3.0.9",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"rimraf": "^3.0.0",
		"semantic-release": "^15.13.24",
		"xo": "^0.25.3"
	}
}
